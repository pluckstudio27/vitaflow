# Configurações da aplicação
SECRET_KEY=your-secret-key-here
FLASK_ENV=development

# Configuração do tipo de banco de dados
# true = MongoDB, false = SQLAlchemy (SQLite/PostgreSQL)
USE_MONGODB_PRIMARY=false

# Configurações SQLAlchemy
# Para desenvolvimento (SQLite)
DEV_DATABASE_URL=sqlite:///almox_sms_dev.db

# Para produção (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost/almox_sms

# Configurações MongoDB
# Para desenvolvimento local
MONGODB_URI=mongodb://localhost:27017/almox_sms

# Para MongoDB Atlas (produção)
# MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/almox_sms?retryWrites=true&w=majority

# Outras configurações
ITEMS_PER_PAGE=20